<%- include("../partials/head.ejs") %> 
<body>
    <%- include("../partials/header.ejs") %>
    <main>
        <h1 class="title">Iniciar Sesion</h1>
        <section class="login">
            <form action="/access" method="post" class="login-form">
                <fieldset>
                    <label for="login">Nombre de usuario</label><br>
                    <input type="text" name="login" id="login">
                </fieldset>
                <fieldset>
                    <label for="password">Contraseña</label><br>
                    <input type="password" name="password" id="password">
                </fieldset>
                <button type="submit">Ingresar</button>
            </form>
        </section>
        <section class="register-forgot">
            <div>
                <p>¿No tiene una cuenta? <a href="/register" style="color: white;">Registrate</a></p>
            </div>
            <div>
                <p>¿Olvido su contraseña? <a href="/register" style="color: white;">Recuperar contraseña</a></p>
            </div>
        </section>
    </main>
    <%- include("../partials/footer.ejs") %> 
</body>